<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLIGHTCYAN"
        tools:context=".TransactionMenuActivity">

    <Button
            android:text="Account Transfer"
            android:layout_width="249dp"
            android:layout_height="59dp"
            android:id="@+id/accountTransfer" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.504"
            android:background="#ABEBC6"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="156dp"
    />
    <Button
            android:text="Mobile Recharge"
            android:layout_width="249dp"
            android:layout_height="59dp"
            android:id="@+id/mobileRecharge" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.504"
            android:background="#ABEBC6"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/accountTransfer"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/onlinePayment"
            app:layout_constraintVertical_bias="0.129"/>
    <Button
            android:text="Online Payment"
            android:layout_width="249dp"
            android:layout_height="59dp"
            android:id="@+id/onlinePayment" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.504" android:background="#ABEBC6"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="116dp"
    />
</android.support.constraint.ConstraintLayout>