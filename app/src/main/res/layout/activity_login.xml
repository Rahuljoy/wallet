<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLIGHTCYAN"
        tools:context="com.example.rahul.ewallet.LoginActivity">

    <ImageView
            android:layout_width="363dp"
            android:layout_height="245dp" app:srcCompat="@drawable/e_wallet_logo"
            android:id="@+id/imageView"
            tools:ignore="MissingConstraints" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="User Name"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" tools:ignore="MissingConstraints" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.503"
            android:id="@+id/userNameText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:ems="10"
            android:id="@+id/passwordText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.503"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="342dp"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton"
            android:textColor="@android:color/black"
            android:background="@color/colorclosestMaterial" tools:ignore="MissingConstraints" android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.9" tools:layout_editor_absoluteY="413dp"/>
    <Button
            android:text="Forget password ?"
            android:layout_width="222dp"
            android:layout_height="36dp"
            android:id="@+id/forgetPasswordButton"
            android:background="@android:color/transparent" android:textSize="16sp"
            android:textColor="@android:color/holo_blue_dark"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.054" android:textAllCaps="false"
            tools:layout_editor_absoluteY="480dp" tools:ignore="MissingConstraints"/>
</android.support.constraint.ConstraintLayout>
